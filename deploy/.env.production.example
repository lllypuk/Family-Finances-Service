# Family Budget Service - Production Environment Template
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Domain Configuration
DOMAIN=budget.example.com

# Database
DATABASE_PATH=/data/budget.db

# Security - CHANGE THESE VALUES!
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND
CSRF_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND

# Logging
LOG_LEVEL=info
ENVIRONMENT=production

# Admin Contact (for Let's Encrypt)
ADMIN_EMAIL=admin@example.com

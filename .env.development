# Family Budget Service - Development Environment Configuration
# This file contains default values for local development with SQLite

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# SQLite Database Configuration
DATABASE_PATH=./data/budget.db

# Web/Session Configuration
SESSION_SECRET=your-super-secret-session-key-for-local-development-change-me
SESSION_TIMEOUT=24h
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=Lax

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT_PATH=stdout

# Application Environment
ENVIRONMENT=development

# Database Migration Configuration
MIGRATION_PATH=./migrations
MIGRATION_TIMEOUT=30s

# Testing Configuration
TEST_DATABASE_PREFIX=testdb_
TEST_CLEANUP_ENABLED=true

# Performance Configuration
ENABLE_PROFILING=true
PROFILING_PORT=6060

# Security Configuration (Development only - change in production)
DISABLE_CSRF_IN_DEV=false
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Feature Flags
ENABLE_CACHING=true
ENABLE_HEALTH_CHECKS=true

# Development specific settings
AUTO_MIGRATE=true
ENABLE_SQL_LOGGING=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Rate Limiting (Development - more permissive)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Email Configuration (Development - use local SMTP or disable)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025
EMAIL_FROM=noreply@family-budget.local

# File Upload Configuration
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=/tmp/family-budget-uploads

# Cache Configuration
CACHE_DEFAULT_TTL=1h
CACHE_CLEANUP_INTERVAL=10m

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30s

# Development Tools
ENABLE_PPROF=true
ENABLE_EXPVAR=true
ENABLE_SWAGGER_UI=true
SWAGGER_UI_PATH=/swagger/

# Time Configuration
DEFAULT_TIMEZONE=UTC
DATE_FORMAT=2006-01-02
TIME_FORMAT=15:04:05

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru

# External Services (Development stubs)
EXTERNAL_API_TIMEOUT=30s
EXTERNAL_API_RETRIES=3

# Docker Compose Configuration (when using docker-compose)
DATA_DIR=./data

# Note: This file is for development only
# For production deployment, use environment-specific configuration
# Never commit real secrets to version control
